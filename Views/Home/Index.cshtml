@model IEnumerable<Catblog.Models.AdminKittys.Create>
@{
	ViewData["Title"] = "Home Page";
}

@{
	int rowNumber = 1;
}

<div class="text-center">
	<h1 class="display-4">Welcome</h1>
	<hr />
</div>
<form method="post">
	<table class="table">
		<tbody>
			@foreach(var create in Model)
			{
				<td>
					<a asp-action="Details" asp-controller="AdminKittys" asp-route-id="@create.Id" class="btn-close-white">
						<table>
						<tr><td colspan="2">@create.AdminCatTitle</td></tr>
							<tr>
							<td style="word-wrap: break-word; word-break: break-word; white-space: normal;">@create.AdminCatDescription</td>
							</tr>
						</table>

					</a>
				</td>
				rowNumber++;
				if (rowNumber % 1 == 0)
				{
				<tr></tr>
				}
			}			
		</tbody>
	</table>
</form>
