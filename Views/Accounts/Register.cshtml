@model Catblog.Models.Accounts.UserRegistrationModel
<body class="register-login-body">
	<div class="register-background">
		<h1 style="text-align:center;">Sign up and start posting!</h1>

		<hr />
		<div class="row">
			<div class="reg-login-form">
				<form asp-action="Register">
					<div asp-validation-summary="All" class="text-danger"></div>

					<div class="form-group">
						@* <label asp-for="UserName" class="control-label">Username</label> *@
						<br />
						<input asp-for="UserName" class="form-control" placeholder="Username"/>
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<br /> <br />			
					<div class="form-group">
						@* <label asp-for="Email" class="control-label"></label> *@
						<input asp-for="Email" class="form-control" placeholder="Email"/>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<br /> <br />
					<div class="form-group">
						@* <label asp-for="Password" class="control-label"></label> *@
						<input asp-for="Password" class="form-control" placeholder="Password"/>
						<span asp-validation-for="Password" class="text-danger"></span>
					</div>
					<br /> <br />
					<div class="form-group">
						@* <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label> *@
						<input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
						<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
					</div>
					<br /> <br />
					<div class="form-group" style="align-items: center;">
						<input type="submit" value="Register" class="regButton" />
					</div>
					<a asp-controller="Accounts" asp-action="Login">Already have an account?</a>
				</form>
			</div>
		</div>
	</div>
</body>





@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}