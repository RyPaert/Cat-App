@model Catblog.Models.Cats.Cat
<div style="font-size: 1.5rem;">
    <h1 style="text-align: center;">@Html.DisplayFor(model => model.Title)</h1>
    <div>
        <hr />
        <div>
            <dl class="row">
                <div class="form-group row" id="PostDetails">
                    <div style="word-wrap: break-word; word-break: break-word; white-space: normal;">
                        @Html.DisplayFor(model => model.Title)<br />
                        @Html.DisplayFor(model => model.Description)<br />
                        @Html.DisplayFor(model => model.Like)<br />
                    </div>
                </div>
            </dl>
            <form asp-action="DeleteConfirmation">
                <input type="hidden" asp-for="Id" name="id" />
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back</a>
            </form>
        </div>
    </div>
</div>